{
  "manifest_version": 3,
  "name": "SpoofGuard",
  "version": "1.0.0",
  "description": "Real-time email spoofing detection that analyzes SPF, DKIM, and DMARC headers to detect phishing and business email compromise attacks.",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "notifications",
    "alarms",
    "identity"
  ],
  
  "host_permissions": [
    "*://mail.google.com/*",
    "https://dns.google/*",
    "https://www.googleapis.com/*",
    "http://*/*",
    "https://*/*"
  ],
  
  "oauth2": {
    "client_id": "851135336689-qsg7eb8q6cp2flqqbeg5afjlb09ftrhv.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly"
    ]
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "SpoofGuard - Email Security Analysis"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://mail.google.com/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}